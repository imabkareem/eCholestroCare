<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor's Dashboard</title>
    <link rel="stylesheet" href="./css/style.css">
</head>

<body class="bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100 font-sans min-h-screen">
    <!-- Header -->
    <header class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-5 shadow-lg">
        <div class="container mx-auto flex justify-between items-center px-6">
            <h1 class="text-3xl font-extrabold tracking-wide">eCholestroCare</h1>
            <nav class="space-x-6">
                <a href="./patientList" class="text-lg font-medium hover:underline transition duration-300">Patients</a>
                <a href="#" class="text-lg font-medium hover:underline transition duration-300">More</a>
            </nav>
        </div>
    </header>

    <div class="container mx-auto mt-10 p-8 bg-white rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Define Health Rules</h2>

        <form action="/drules" method="post" class="space-y-6">
            <input type="hidden" name="doctorId" value="<%= doctorId %>">

            <% cholesterolLevels.forEach((level, index) => { %>
            <div class="p-6 bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg shadow-md hover:shadow-xl transition-transform transform hover:scale-105">
                <label class="block text-lg font-semibold text-gray-700 mb-2">
                    Level <%= index + 1 %> (<%= level %>)
                </label>
                <input type="hidden" name="rules[<%= index %>][attribute]" value="<%= level %>">

                <div class="grid grid-cols-3 gap-4">
                    <input type="number" name="rules[<%= index %>][minValue]" placeholder="Min Value"
                        class="p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none transition"
                        required>
                    <input type="number" name="rules[<%= index %>][maxValue]" placeholder="Max Value"
                        class="p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none transition"
                        required>
                    <input type="text" name="rules[<%= index %>][suggestion]" placeholder="Suggestion"
                        class="p-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-400 focus:outline-none transition"
                        required>
                </div>
            </div>
            <% }); %>

            <div class="text-center">
                <button type="submit"
                    class="bg-gradient-to-r from-blue-500 to-purple-500 text-white text-lg font-bold py-3 px-8 rounded-full shadow-lg hover:shadow-xl transition-transform transform hover:scale-105 hover:from-blue-600 hover:to-purple-600">
                    Save Rules
                </button>
            </div>
        </form>
    </div>
</body>
</html>
